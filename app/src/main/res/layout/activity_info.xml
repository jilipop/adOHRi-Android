<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            tools:context=".InfoActivity">

        <include layout="@layout/toolbar"/>

        <ImageView
                android:layout_width="281dp"
                android:layout_height="139dp"
                android:id="@+id/imageView"
                android:contentDescription="@string/adOHRi_logo_alttext"
                app:srcCompat="@drawable/logo_adohri"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:textColor="@color/white"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_name_and_version_number"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/info_text"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@+id/app_name_and_version_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"
                android:text="@string/info_text"/>
        <TextView
                android:textColor="@color/white"
                android:text="@string/credits"
                android:textAlignment="center"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/credits"
                app:layout_constraintTop_toBottomOf="@+id/info_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:textColor="#1E90FF"
                android:text="@string/homepage_link"
                android:layout_marginTop="12dp"
                android:onClick="browseHomepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/homepageLink"
                app:layout_constraintTop_toBottomOf="@+id/credits"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:textColor="#1E90FF"
                android:text="@string/privacy_policy_link"
                android:layout_marginTop="12dp"
                android:onClick="browsePrivacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/privacyPolicyLink"
                app:layout_constraintTop_toBottomOf="@+id/homepageLink"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:textColor="#1E90FF"
                android:text="@string/licenses_button"
                android:layout_marginTop="12dp"
                android:onClick="openLicensesActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/licensesButton"
                app:layout_constraintTop_toBottomOf="@+id/privacyPolicyLink"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:textColor="#1E90FF"
                android:text="@string/source_code_link"
                android:layout_marginTop="12dp"
                android:onClick="browseSourceCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sourceCodeLink"
                app:layout_constraintTop_toBottomOf="@+id/licensesButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>